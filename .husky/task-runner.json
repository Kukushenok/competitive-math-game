{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "dotnet-format",
      "command": "dotnet",
      "group": "pre-commit",
      "args": [ "format", "analyzers", "--verify-no-changes", "--severity", "error", "./src/CompetitiveBackend.sln"]
    },
    {
      "name": "dotnet-build",
      "command": "dotnet",
      "group": "pre-commit",
      "args": [ "build", "-warnaserror", "./src/CompetitiveBackend.sln"]
    },
    {
      "name": "dotnet-metrics",
      "command": "dotnet",
      "group": "pre-commit",
      "args": [ "msbuild", "-t:Metrics", "./src/CompetitiveBackend.sln"]
    },
    {
      "name": "check-cyclomatic-complexity",
      "command": "bash",
      "group": "pre-commit",
      "args": [ "./.husky/scripts/check_complexity.sh" ]
    }
  ]
}

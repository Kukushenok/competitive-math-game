{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "postgres": "Server=database;Port=5432;Userid=root;Password=postgres_password;Database=maindb;MaxPoolSize=95;MinPoolSize=5;",
    "Player": "Server=database;Port=5432;Userid=player;Password=player_password;Database=maindb",
    "Admin": "Server=database;Port=5432;Userid=admin;Password=admin_password;Database=maindb",
    "Guest": "Server=database;Port=5432;Userid=guest;Password=guest_password;Database=maindb",
    "RewardScheduler": "Server=database;Port=5432;Userid=reward_granter;Password=reward_granter;Database=maindb"
  },
  "Secrets": {
    "SessionKey": "THIS IS SO COOL! This key is really awesome! It is indeed my custom Secret key for authentication"
  },
  "Constraints": {
    "RewardDescription": {
      "DescriptionLength": {
        "min": 0,
        "max": 128
      },
      "NameLength": {
        "max": 32
      }
    },
    "Competition": {
      "DescriptionLength": {
        "min": 0,
        "max": 128
      },
      "NameLength": {
        "max": 32
      }
    },
    "Player": {
      "DescriptionLength": {
        "min": 0,
        "max": 128
      },
      "NameRegex": {
        "pattern": "^[a-zA-Z0-9._]+$"
      },
      "EmailRegex": {
        "pattern": "^[a-zA-Z0-9._+%-]+@[a-zA-Z0-9.-]+[.][a-zA-Z]+$"
      },
      "NameLength": {
        "min": 4,
        "max": 32
      },
      "Password": {
        "MinLength": 8,
        "RequiresLetters": true
      }
    },
    "ImageConfig": {
      "MinSize": 32,
      "MaxSize": 256
    }
  }
}

{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "dotnet-format",
      "command": "dotnet",
      "args": [ "format", "--verify-no-changes", "--severity", "error" ]
    },
    {
      "name": "dotnet-build",
      "command": "dotnet",
      "args": [ "build", "-warnaserror" ]
    },
    {
      "name": "dotnet-metrics",
      "command": "dotnet",
      "args": [ "msbuild", "-t:Metrics" ]
    },
    {
      "name": "check-cyclomatic-complexity",
      "command": "bash",
      "args": [ "./scripts/check_complexity.sh" ]
    }
  ]
}
